[flake8]
max-line-length = 120
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (in __init__.py files)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache

per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811
    */migrations/*:E501

[isort]
profile = black
line_length = 120
known_first_party = afmtool
known_third_party = pytest,matplotlib,reportlab

[bandit]
exclude = /test/,/.venv/
